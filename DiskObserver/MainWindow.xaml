<Window x:Class="DiskObserver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskObserver"
        xmlns:view="clr-namespace:DiskObserver.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <view:DisksViewer Grid.Column="0"/>

        <GridSplitter Grid.Column="1" BorderBrush="Black" 
                      BorderThickness="1"
                      ShowsPreview="False"
                      HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

        <view:PhysicalObjectsView Grid.Column="2" DataContext="{Binding SelectedPhysicalDisk}"/>
    </Grid>
</Window>
